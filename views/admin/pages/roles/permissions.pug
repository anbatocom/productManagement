extends ../../layouts/default.pug

block main 
  h1 #{pageTitle}

  div(class="text-right")
    button(
      type="submit"
      class="btn btn-primary mb-3"
      button-submit
      data-path=`/${prefixAdmin}/roles/permissions`
    ) Cập nhật
  
  table(
    class="table table-hover table-sm"
    table-permissions=records
  )
    thead   
      tr 
        th Tính năng
        each item in records
          th(class="text-center" role-id=item.id) #{item.title}
          
    tbody
      //- Tổng quan
      tr
        td(colspan="4") 
          b Tổng quan
      tr(data-name="dashboard_view")
        td Xem 
        each item in records
          td(class="text-center")
            input(type="checkbox" data-id=item.id)
      //- Hết tổng quan
      
      //- Quản lí danh mục sản phẩm 
      tr
        td(colspan="4") 
          b Danh mục sản phẩm
      tr(data-name="products-category_view")
        td Xem 
        each item in records
          td(class="text-center")
            input(type="checkbox" data-id=item.id)
      tr(data-name="products-category_create")
        td Thêm mới
        each item in records
          td(class="text-center")
            input(type="checkbox"  data-id=item.id)
      tr(data-name="products-category_edit")
        td Sửa
        each item in records
          td(class="text-center")
            input(type="checkbox"  data-id=item.id)
      tr(data-name="products-category_delete")
        td Xóa
        each item in records
          td(class="text-center")
            input(type="checkbox"  data-id=item.id)
    //- Hết Quản lí danh mục sản phẩm      

    //- Quản lí sản phẩm 
    tr
      td(colspan="4") 
        b Sản phẩm
    tr(data-name="products_view")
      td Xem 
      each item in records
        td(class="text-center")
          input(type="checkbox" data-id=item.id)
    tr(data-name="products_create")
      td Thêm mới
      each item in records
        td(class="text-center")
          input(type="checkbox"  data-id=item.id)
    tr(data-name="products_edit")
      td Sửa
      each item in records
        td(class="text-center")
          input(type="checkbox"  data-id=item.id)
    tr(data-name="products_delete")
      td Xóa
      each item in records
        td(class="text-center")
          input(type="checkbox"  data-id=item.id)
    //- Hết Quản lí sản phẩm      

    //- Quản lí phân quyền
    tr
      td(colspan="4") 
        b Nhóm quyền
    tr(data-name="role_view")
      td Xem 
      each item in records
        td(class="text-center")
          input(type="checkbox" data-id=item.id)
    tr(data-name="role_create")
      td Thêm mới
      each item in records
        td(class="text-center")
          input(type="checkbox"  data-id=item.id)
    tr(data-name="role_edit")
      td Sửa
      each item in records
        td(class="text-center")
          input(type="checkbox"  data-id=item.id)
    tr(data-name="role_delete")
      td Xóa
      each item in records
        td(class="text-center")
          input(type="checkbox"  data-id=item.id)
    tr(data-name="role_permission")
      td Phân quyền
      each item in records
        td(class="text-center")
          input(type="checkbox"  data-id=item.id)
    //- Hết quản lí phân quyền  

    //- Quản lí tài khoản
    tr
      td(colspan="4") 
        b Tài khoản
    tr(data-name="accounts_view")
      td Xem 
      each item in records
        td(class="text-center")
          input(type="checkbox" data-id=item.id)
    tr(data-name="accounts_create")
      td Thêm mới
