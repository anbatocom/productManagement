extends ../../layouts/default.pug

block main 
  h1 #{pageTitle}

  form(
    action=`/${prefixAdmin}/settings/general?_method=PATCH`
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="websiteName") 
      input(
        type="text"
        class="form-control"
        id="websiteName"
        name="websiteName"
        value=setting.websiteName
      )
    div(
      class="form-group"
      upload-image 
    )
      label(for="logo") LOGO 
      input(
        type="file"
        class="form-control-file"
        id="logo"
        name="logo"
        accept="image/"
        upload-image-input

      )
      img(
        src=setting.logo
        class="image-preview"
        upload-image-preview
      )
    div(class="form-group")
      label(for="phone") SDT
      input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
        value=setting.phone
      )
    div(class="form-group")
      label(for="email") email 
      input(
        type="text"
        class="form-control"
        id="email"
        name="email"
        value=setting.email
      )
    div(class="form-group")
      label(for="address") address 
      input(
        type="text"
        class="form-control"
        id="address"
        name="address"
        value=setting.address
      )
    div(class="form-group")
      label(for="copyright") copyright 
      input(
        type="text"
        class="form-control"
        id="copyright"
        name="copyright"
        value=setting.copyright
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cajp nhaajt